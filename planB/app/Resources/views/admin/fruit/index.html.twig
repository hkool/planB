{% extends 'admin/index.html.twig' %}

{% block body %}
    <h1>Fruit - overzicht</h1>

    <table class="table table-striped table-bordered ">
        <thead >
            <tr class="row">
                <th class="col d-none d-sm-block">Id</th>
                <th class="col d-none d-sm-block">Naam</th>
                <th class="col d-none d-sm-block">Seizoen</th>
                <th class="col-xs-12 col-sm-3 ">Afbeelding</th>
                <th class="col d-none d-sm-block">Actions</th>
            </tr>
        </thead>
        <tbody >
        {% for fruit in fruits %}
            <tr class="row">
                <td class="col d-none d-sm-block"><a href="{{ path('admin_showfruit', { 'id': fruit.id }) }}">{{ fruit.id }}</a></td>
                <td class="col d-none d-sm-block">{{ fruit.naam }}</td>
                <td class="col d-none d-sm-block">{{ fruit.seizoen }}</td>
                <td class="col-xs-12 col-sm-3 "><a href="{{ path('admin_showfruit', { 'id': fruit.id }) }}"><img src="{{ asset('img/'~fruit.afbeelding) }}" /></a></td>
                <td class="col d-none d-sm-block">
                            <a href="{{ path('admin_deletefruit', { 'id': fruit.id }) }}"><i class="fas fa-trash-alt"></i>
                                </a>
                            <a href="{{ path('admin_editfruit', { 'id': fruit.id }) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
