{% extends 'base.html.twig' %}
{% block body %}
<h3 class="display-3">Fruit</h3>
 <tr class="container-fluid">
    <table class="table table-responsive-md table-striped">
    <thead>
        <tr>
            <th><h5 class="display-5">afbeelding</h5></th>
            <th><h5 class="display-5">naam</h5></th>
            <th><h5 class="display-5">seizoen</h5></th>
        </tr>
    </thead>
        {% for f in fruitsoorten %}
           <tr>
               <td>
                   <img class="rounded-circle flex-sm-column-reverse" src="{{ asset("img/#{f.image}") }}" />
               </td>
                <td>
                    <a href="{{ path('adminUpdateFruit',{'id':f.id}) }}">{{ f.naam }}</a>
                </td>
                <td >
                    {{ f.seizoen }}
                </td>
            </tr>
        {%  endfor %}
    </table>

{% endblock %}